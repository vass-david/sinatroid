source 'https://rubygems.org'

# base
gem 'rake', '~> 10.3.2'
gem 'sinatra'
gem 'sinatra-contrib'

# assets
gem 'slim'
gem 'redcarpet'
gem 'therubyracer'
gem 'coffee-script'
gem 'sass'
gem 'compass'
gem 'sinatra-asset-pipeline'

# internationalization
gem 'i18n'

# exception_mailer dependency
gem 'pony'

group :development do
	gem 'pry' # cl
	gem 'shotgun' # for backend development
	gem 'thin' # for frontend developement (doesn't reload changed ruby code)
end

